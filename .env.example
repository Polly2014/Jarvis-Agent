# ================================================
# Polly Agent 环境配置
# ================================================

# LLM API 配置（二选一或都配置）
CLAUDE_API_KEY=your-claude-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
DEFAULT_LLM=deepseek  # claude | deepseek

# 企业微信配置
WECHAT_CORP_ID=your-corp-id
WECHAT_AGENT_ID=your-agent-id
WECHAT_SECRET=your-secret
WECHAT_TOKEN=your-callback-token
WECHAT_AES_KEY=your-aes-key
WECHAT_USER_ID=PollyWang  # 你的企业微信 ID

# 博客配置
BLOG_CONTENT_PATH=/path/to/content/blog
BLOG_REMINDER_THRESHOLD_DAYS=3  # 超过多少天提醒
BLOG_REMINDER_CRON_HOUR=10  # 每天几点检查

# 数据库配置
DATABASE_PATH=./data/memory.db

# 服务配置
HOST=0.0.0.0
PORT=50207
DEBUG=false
